{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.login'|trans }}
{% endblock %}

{% block body %}
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>{{ 'label.login'|trans }}</h2>

                </div>
            </div>
            <div class="row">
                {% if error %}
                    {%  include 'default/_single_flash_message.html.twig' with {
                    type: 'danger',
                    message: error|trans({}, 'FOSUserBundle')
                    } %}
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="form-group">
                        <label class="col-sm-2 control-label required" for="username">{{ 'label.username'|trans({}, 'FOSUserBundle') }}</label>
                        <div class="col-sm-10">
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control">
                        </div>
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label class="col-sm-2 control-label required" for="password">{{ 'label.password'|trans({}, 'FOSUserBundle') }}</label>
                        <div class="col-sm-10">
                            <input type="password" id="password" name="_password" required="required" class="form-control">
                        </div>
                    </div>
                    <br><br>
                    <div class="text-center">
                        <input type="submit" id="_submit" class="page-scroll btn-xl" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" style="padding: 10px;" />
                    </div>
                </form>
            </div>
{% endblock %}

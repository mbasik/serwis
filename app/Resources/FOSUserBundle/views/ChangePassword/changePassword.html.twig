{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.registration'|trans }}
{% endblock %}

{% block body %}
<section id="portfolio" style="background:#222222;color:#fff">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">{{ 'title.registration'|trans }}</h2>
                <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            </div>
        </div>
        <div class="row">
          <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
              {{ form_widget(form) }}
              <div class="text-center">
                  <input type="submit" class="page-scroll btn-xl" style="padding: 10px;" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
              </div>
          </form>
      </div>
    </div>
  </section>
{% endblock %}

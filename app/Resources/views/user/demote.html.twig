{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user.demote'|trans }}
{% endblock %}

{% block body %}
<section id="portfolio" style="background:#222222;color:#fff">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">{{ 'title.user.demote'|trans }}</h2>
                <h3 class="section-subheading text-muted">{{ user.username }}</h3>
            </div>
        </div>
        <div class="row">
          {{ form_start(form) }}
          {{ form_widget(form) }}
          <div class="text-center">
            <input type="submit" class="page-scroll btn-xl" style="padding: 10px;" value="{{ 'demote'|trans }}">
          </div>
          {{ form_end(form) }}
      </div>
    </div>
  </section>
{% endblock %}

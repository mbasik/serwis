{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.classified'|trans }}
{% endblock %}

{% block body %}
    <div class="tabb">
    {% if users is defined and users|length %}
        <table class="table table-striped table-hover table-responsive">
            <thead>
            <tr>
                <th>{{ 'Username' }}</th>
                <th>{{ 'Email' }}</th>
                <th scope="col">
                </th>
                <th scope="col">
                </th>
            </tr>
            </thead>
            <tbody>
            {% for item in users %}
                <tr>
                    <td>{{ item.username }}</td>
                    <td>{{ item.email }}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="{{ 'label.actions'|trans }}">
                            <a href="{{ path('user_edit', {'id': item.id}) }}" class="btn btn-default" title="{{ 'action.edit'|trans }}">
                                {{ 'action.edit'|trans }}
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="{{ 'label.actions'|trans }}">
                            <a href="{{ path('user_delete', {'id': item.id}) }}" class="btn btn-default" title="{{ 'action.delete'|trans }}">
                                {{ 'action.delete'|trans }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
        Twoje oferty:

        <div class="navigation text-center">
            {{ pagerfanta(users, 'twitter_bootstrap3_translated', { routeName: ('user_index_paginated') }) }}
        </div>
    {% else %}
        <div class="alert alert-warning" role="alert">
            {{ 'message.empty_list'|trans }}
        </div>
    {% endif %}
    </div>
{% endblock %}
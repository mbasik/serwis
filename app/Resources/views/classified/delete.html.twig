{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.classified.delete'|trans }}
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">{{ 'title.books.delete'|trans }}</h2>
                <h3 class="section-subheading text-muted">{{ classified.name }}</h3>
            </div>
        </div>
        <div class="row">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="text-center">
                <input type="submit" class="page-scroll btn-xl" style="padding: 10px;" value="{{ 'delete'|trans }}">
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}